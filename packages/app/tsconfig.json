{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "composite": false,
    "baseUrl": ".",
    "paths": {
      "@bo/engine": ["../engine/src"],
      "@bo/ui": ["../ui/src"],
      "@bo/examples": ["../examples/src"],
      "@bo/plugin-kernel-rbf": ["../plugins/kernels.rbf/src"],
      "@bo/plugin-acquisition-ei": ["../plugins/acquisitions.ei/src"],
      "@bo/plugin-oracle-branin": ["../plugins/oracles.branin/src"],
      "@bo/plugin-optimizer-multi-start": ["../plugins/optimizers.multi-start/src"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
