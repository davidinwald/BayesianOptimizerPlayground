{
  "name": "bayesian-optimizer-playground",
  "version": "0.1.0",
  "private": true,
  "description": "Interactive client-side Bayesian Optimization playground with composable plugins",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter=@bo/app",
    "start": "pnpm dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "verify": "node scripts/verify-setup.js",
    "preinstall": "node scripts/check-pnpm.js",
    "postinstall": "echo 'âœ… Installation complete! Run: pnpm start'"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
"typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

